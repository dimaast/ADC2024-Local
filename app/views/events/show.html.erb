<p style="color: green"><%= notice %></p>

<%= render @event %>
<strong>Сообщество:</strong>
<%= @event.community[:title] %>

<div>
  <% if can? :manage, @event %>
    <%= link_to "Отредактировать ивент", edit_event_path(@event) %>
    <%= button_to "Удалить ивент", event_path(@event), method: :delete %>
  <% end %>
  <%= link_to "Вернуться к ивентам", events_path %>
</div>

<h2>Комментарии</h2>
<% @event.comments.each do |comment| %>
  <%= render comment %>
<% end %>

<h2>Добавить комментарий:</h2>
<%= render "admin/comments/form" %>